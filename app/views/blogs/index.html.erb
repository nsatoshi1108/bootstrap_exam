<h1>ブログ一覧</h1>
<%= notice%>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
  <% @blogs.each do |blog|%>
    <tr>
      <td><%= blog.name%></td>
      <td><%= blog.content%></td>
      <td><%= link_to '内容をみる',blog_path(blog.id)%></td>
      <td><%= link_to '編集する',edit_blog_path(blog.id)%></td>
      <td><%= link_to '削除する',blog_path(blog.id),method: :delete,data:{ confirm:'本当に削除しますか？'}%></td>
    </tr>
  <% end%>
</table>
<%= link_to 'ブログを作成する',new_blog_path%>